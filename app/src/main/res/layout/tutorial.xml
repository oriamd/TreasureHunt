<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/grassbg"
    android:id="@+id/activity_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="337dp"
        android:layout_height="512dp"
        app:srcCompat="@drawable/ic_detector"
        android:id="@+id/imageView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="26dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="26dp"
        android:layout_marginEnd="26dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="26dp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <ImageButton
        android:layout_width="39dp"
        app:srcCompat="@drawable/exitx"
        android:id="@+id/imageButton5"
        android:layout_height="44dp"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:background="@null"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="192dp"
        android:layout_height="128dp"
        android:id="@+id/constraintLayout"
        app:layout_constraintRight_toRightOf="@+id/imageView"
        app:layout_constraintLeft_toLeftOf="@+id/imageView"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        android:layout_marginBottom="40dp">

        <TextView
            android:text="@string/speed_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:id="@+id/speedunit"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp" />

    </android.support.constraint.ConstraintLayout>

    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chronometer2"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout"
        app:layout_constraintVertical_bias="0.58000004"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout" />

    <TextView
        android:text="Exit"
        android:layout_width="39dp"
        android:layout_height="56dp"
        android:gravity="center"
        android:id="@+id/textViewexit"
        android:background="@drawable/tutorialbackround"
        app:layout_constraintTop_toBottomOf="@+id/imageButton5"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp" />

    <TextView
        android:text="Time pass"
        android:layout_width="81dp"
        android:layout_height="42dp"
        android:gravity="center"
        android:id="@+id/textViewspeedspeed"
        android:background="@drawable/tutorialbackround"
        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/chronometer2"
        android:layout_marginLeft="8dp" />

    <ImageButton
        android:layout_width="86dp"
        android:layout_height="67dp"
        app:srcCompat="@drawable/playsound"
        android:id="@+id/imageButton6"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:background="@null"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintHorizontal_bias="0.82"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        android:onClick="playFarSound"
        app:layout_constraintVertical_bias="0.59000003" />

    <ImageButton
        android:layout_width="86dp"
        android:layout_height="67dp"
        app:srcCompat="@drawable/playsound"
        android:id="@+id/imageButton7"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:background="@null"
        app:layout_constraintRight_toLeftOf="@+id/imageButton6"
        android:layout_marginEnd="88dp"
        android:layout_marginRight="88dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        android:onClick="playCloseSound"
        app:layout_constraintVertical_bias="0.59000003" />

    <TextView
        android:text="Getting Close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        app:layout_constraintRight_toRightOf="@+id/imageButton6"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageButton6"
        app:layout_constraintLeft_toLeftOf="@+id/imageButton6" />

    <TextView
        android:text="Getting Far"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageButton7"
        app:layout_constraintRight_toRightOf="@+id/imageButton7"
        app:layout_constraintLeft_toLeftOf="@+id/imageButton7" />

    <TextView
        android:text="@string/gamedes"
        android:layout_width="230dp"
        android:layout_height="109dp"
        android:id="@+id/textView14"
        app:layout_constraintRight_toRightOf="@+id/imageView"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.24000001"
        android:background="@color/colorPrimary"
        android:gravity="center"/>

</android.support.constraint.ConstraintLayout>
