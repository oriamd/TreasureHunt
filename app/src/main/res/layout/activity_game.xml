<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/grassbg"
    android:id="@+id/activity_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ori.treasurehunt.com.treasurehunt.MainGameActivity">

    <ImageView
        android:layout_width="337dp"
        android:layout_height="512dp"
        app:srcCompat="@drawable/ic_detector"
        android:id="@+id/imageView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="26dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="26dp"
        android:layout_marginEnd="26dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="26dp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <ImageButton
        android:layout_width="39dp"
        app:srcCompat="@drawable/exitx"
        android:id="@+id/imageButton5"
        android:layout_height="44dp"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:background="@null"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="quitGame"/>/>

    <android.support.constraint.ConstraintLayout
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        android:layout_marginBottom="50dp"
        app:layout_constraintRight_toRightOf="@+id/imageView"
        app:layout_constraintLeft_toLeftOf="@+id/imageView"
        android:id="@+id/constraintLayout"
        android:layout_width="200dp"
        android:layout_height="109dp">

        <TextView
            android:text="Time Pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView18"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/chronometer2"
            app:layout_constraintRight_toRightOf="@+id/chronometer2"
            app:layout_constraintLeft_toLeftOf="@+id/chronometer2" />

        <Chronometer
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chronometer2"
            android:textSize="40sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.42000002" />

    </android.support.constraint.ConstraintLayout>

    <TextView
        android:text="Ready"
        style="@style/gameMassages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView19"
        android:textSize="70sp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        android:background="@drawable/roundgreen"
        android:backgroundTint="@android:color/holo_red_light"
        android:padding="10dp"
        app:layout_constraintVertical_bias="0.3"
        android:visibility="invisible"
        android:textColor="@android:color/background_dark" />
    <TextView
        android:text="GO!"
        style="@style/gameMassages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView20"
        android:textSize="80sp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        android:background="@drawable/roundgreen"
        android:backgroundTint="@color/colorPrimaryDark"
        android:padding="10dp"
        android:visibility="invisible"
        app:layout_constraintVertical_bias="0.3"
        android:textColor="@android:color/white" />


</android.support.constraint.ConstraintLayout>
