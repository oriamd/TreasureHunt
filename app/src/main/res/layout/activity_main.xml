<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ori.treasurehunt.MainActivity">

    <ImageButton
        android:layout_width="102dp"
        android:layout_height="91dp"
        app:srcCompat="@drawable/sgold"
        android:id="@+id/imageButton"
        android:background="@drawable/roundcorner"

        app:layout_constraintRight_toLeftOf="@+id/imageButton2"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="@+id/imageButton2"
        android:onClick="startGame"/>

    <ImageButton
        android:layout_width="99dp"
        android:layout_height="91dp"
        app:srcCompat="@drawable/mgold"
        android:id="@+id/imageButton2"
        android:layout_marginEnd="16dp"
        android:background="@drawable/roundcorner"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.39" />

    <ImageButton
        android:layout_width="96dp"
        android:layout_height="91dp"
        app:srcCompat="@drawable/bgold"
        android:background="@drawable/roundcorner"
        android:id="@+id/imageButton3"
        app:layout_constraintTop_toTopOf="@+id/imageButton2"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/imageButton2"
        android:layout_marginLeft="8dp" />

    <TextView
        android:text="@string/level_two_gold_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageButton2"
        app:layout_constraintRight_toRightOf="@+id/imageButton2"
        app:layout_constraintLeft_toLeftOf="@+id/imageButton2" />

    <TextView
        android:text="@string/level_one_gold_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView1"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageButton"
        app:layout_constraintRight_toRightOf="@+id/imageButton"
        app:layout_constraintLeft_toLeftOf="@+id/imageButton" />

    <TextView
        android:text="@string/level_three_gold_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageButton3"
        app:layout_constraintRight_toRightOf="@+id/imageButton3"
        app:layout_constraintLeft_toLeftOf="@+id/imageButton3" />

    <ImageView
        android:layout_width="52dp"
        android:layout_height="47dp"
        app:srcCompat="@drawable/goldsack"
        android:id="@+id/imageView2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:layout_constraintLeft_toRightOf="@+id/imageView2"
        android:text="gold" />

    <ImageView
        android:layout_width="333dp"
        android:layout_height="78dp"
        app:srcCompat="@drawable/selectlevel"
        android:id="@+id/imageView3"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toTopOf="@+id/imageButton2"
        android:layout_marginBottom="24dp"
        android:background="@drawable/roundgreen"
        android:padding="1dp"
        app:layout_constraintHorizontal_bias="0.47" />

    <ImageView
        android:layout_width="195dp"
        android:layout_height="168dp"
        app:srcCompat="@drawable/leprechaun"
        android:id="@+id/imageView9"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageButton
        android:layout_width="62dp"
        android:layout_height="54dp"
        app:srcCompat="@drawable/settingsbtn"
        android:id="@+id/imageButton4"
        android:background="@null"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:onClick="startSettings"/>

</android.support.constraint.ConstraintLayout>
