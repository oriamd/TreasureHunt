<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ori.treasurehunt.com.treasurehunt.MainActivity"
    android:background="#C3E1C9">

    <ImageButton
        android:layout_width="102dp"
        android:layout_height="91dp"
        app:srcCompat="@drawable/sgold"
        android:id="@+id/imageButton"
        android:onClick="startLvl"
        app:layout_constraintRight_toLeftOf="@+id/imageButton2"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toTopOf="@+id/imageButton2"
        android:padding="0dp"
        android:scaleType="fitCenter"/>

    <ImageButton
        android:layout_width="102dp"
        android:layout_height="91dp"
        app:srcCompat="@drawable/mgold"
        android:id="@+id/imageButton2"
        android:onClick="startLvl"
        android:padding="0dp"
        android:scaleType="fitCenter"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/imageView9"
        app:layout_constraintVertical_bias="0.58000004" />

    <ImageButton
        android:layout_width="102dp"
        android:layout_height="91dp"
        app:srcCompat="@drawable/bgold"
        android:id="@+id/imageButton3"
        app:layout_constraintTop_toTopOf="@+id/imageButton2"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toRightOf="@+id/imageButton2"
        android:layout_marginLeft="16dp"
        android:onClick="startLvl"
        android:padding="0dp"
        android:scaleType="fitCenter"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageButton2"
        app:layout_constraintRight_toRightOf="@+id/imageButton2"
        app:layout_constraintLeft_toLeftOf="@+id/imageButton2"
        android:text="200 gold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView1"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageButton"
        app:layout_constraintLeft_toLeftOf="@+id/imageButton"
        android:text="100"
        app:layout_constraintRight_toRightOf="@+id/imageButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageButton3"
        app:layout_constraintRight_toRightOf="@+id/imageButton3"
        app:layout_constraintLeft_toLeftOf="@+id/imageButton3"
        android:text="300 gold" />

    <ImageView
        android:layout_width="52dp"
        android:layout_height="47dp"
        app:srcCompat="@drawable/goldsack"
        android:id="@+id/imageView2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:layout_constraintLeft_toRightOf="@+id/imageView2"
        android:text="gold" />

    <ImageView
        android:layout_width="304dp"
        android:layout_height="52dp"
        app:srcCompat="@drawable/selectlevel"
        android:id="@+id/imageView3"
        android:padding="1dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageButton"
        app:layout_constraintRight_toRightOf="@+id/imageButton3"
        app:layout_constraintBottom_toTopOf="@+id/imageView7"
        android:layout_marginBottom="40dp" />

    <ImageView
        android:layout_width="195dp"
        android:layout_height="168dp"
        app:srcCompat="@drawable/leprechaun"
        android:id="@+id/imageView9"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageButton
        android:layout_width="62dp"
        android:layout_height="54dp"
        app:srcCompat="@drawable/settingsbtn"
        android:id="@+id/imageButton4"
        android:background="@null"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:onClick="startSettings"/>

    <ImageView
        android:layout_width="102dp"
        android:layout_height="91dp"
        android:background="@drawable/roundcorner"
        app:srcCompat="@drawable/lock"
        android:id="@+id/imageView7"
        android:backgroundTint="#80cbe8ba"
        app:layout_constraintRight_toRightOf="@+id/imageButton2"
        app:layout_constraintLeft_toLeftOf="@+id/imageButton2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintTop_toTopOf="@+id/imageButton2"
        android:padding="10dp"
        android:alpha="0.8" />
    <ImageView
        android:layout_width="102dp"
        android:layout_height="91dp"
        android:background="@drawable/roundcorner"
        app:srcCompat="@drawable/lock"
        android:id="@+id/imageView8"
        android:backgroundTint="#80cbe8ba"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintRight_toRightOf="@+id/imageButton3"
        app:layout_constraintLeft_toLeftOf="@+id/imageButton3"
        app:layout_constraintTop_toTopOf="@+id/imageButton3"
        android:padding="10dp"
        android:alpha="0.8" />

    <TextView
        android:text="Level One :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView17"
        app:layout_constraintBottom_toTopOf="@+id/imageButton"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageButton"
        app:layout_constraintRight_toLeftOf="@+id/imageView7"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp" />

    <TextView
        android:text="Level Two :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView21"
        app:layout_constraintBottom_toTopOf="@+id/imageButton2"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageButton2"
        app:layout_constraintRight_toRightOf="@+id/imageButton2" />

    <TextView
        android:text="Level Three :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView22"
        app:layout_constraintBottom_toTopOf="@+id/imageView8"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView8"
        app:layout_constraintRight_toRightOf="@+id/imageView8" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="119dp"
        android:layout_height="41dp"
        android:visibility="visible"
        app:layout_constraintRight_toLeftOf="@+id/imageButton4"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp" />

    <Button
        android:id="@+id/achievements"
        android:layout_width="98dp"
        android:layout_height="25dp"
        android:background="@color/colorAccent"
        android:text="Achievements"
        android:textSize="10sp"
        android:visibility="visible"
        app:layout_constraintRight_toLeftOf="@+id/imageButton4"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="16dp" />

    <ImageView
        android:layout_width="351dp"
        android:layout_height="65dp"
        app:srcCompat="@drawable/gamename"
        android:id="@+id/imageView10"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        android:layout_marginBottom="48dp" />


</android.support.constraint.ConstraintLayout>
